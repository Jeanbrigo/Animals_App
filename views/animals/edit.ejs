<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head.ejs") %>

  <body>
    <%- include("../partials/header.ejs") %>
    <main>
      <div>
        <form action="/animals/<%= animal._id %>?_method=PUT" method="post">
          <fieldset>
            <legend>Edit <%= animal.species %></legend>
            <label>
              SPECIES:<input
                type="text"
                name="species"
                value="<%= animal.species %>"
                placeholder="enter animal species"
              />
            </label>
            <label>
              EXTINCT:<input type="checkbox" name="extinct" <%=
              animal.extinct ? "checked" : "" %> />
            </label>
            <label>
              LOCATION:<input
                type="text"
                name="location"
                value="<%= animal.location %>"
                placeholder="enter location name"
              />
            </label>
            <label>
              LIFE EXPECTANCY:<input
                type="text"
                name="lifeExpectancy"
                value="<% animal.lifeExpectancy %>"
              />
            </label>
          </fieldset>
          <input type="submit" value="Update <%= animal.species %>" />
        </form>
      </div>
    </main>
  </body>
</html>