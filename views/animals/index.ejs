<!DOCTYPE html>
<html lang="en">
<%- include("../partials/head.ejs") %>

  <body>
    <%- include("../partials/header.ejs") %>
      <a href="/animals/new"><button class="indexButton">Add A New Animal</button></a>
      <main>
        <div>

          <% for (animal of animals) { %>

            <article>
              <a href="/animals/<%= animal._id %>">
                <h2>
                  <%= animal.species %> - <%= animal.extinct ? "Extinct" : "Not Extinct" %>
                </h2>
              </a>
            </article>

            <% } %>
        </div>

      </main>
      <a href="/user/logout"><button class="indexButton">Logout</button></a>
  </body>

</html>